<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="user">
    <typeAlias alias="user" type="org.proffart.carpool.domain.User" />


    <resultMap id="result" class="user">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="firstName" column="first_name"/>
        <result property="lastName" column="last_name"/>
        <result property="password" column="password"/>
        <result property="token" column="token"/>
        <result property="phone" column="phone"/>
        <result property="enabled" column="enabled"/>
        <result property="fbLink" column="fb_link"/>
        <result property="twLink" column="tw_link"/>
        <result property="goLink" column="go_link"/>
        <result property="fbID" column="fb_id"/>
        <result property="twID" column="tw_id"/>
        <result property="goID" column="go_id"/>
    </resultMap>

    <insert id="insert" parameterClass="map">
        INSERT INTO user(id)
        values (#id#)

        <selectKey resultClass="int" keyProperty="id">
            select last_insert_id() as id
        </selectKey>
    </insert>

    <select id="getAll" resultClass="user">
        SELECT * FROM User
    </select>

    <update id="update" parameterClass="User">
        UPDATE User
        SET    first_name = #firstName#
        WHERE  id = #id#
    </update>

    <delete id="delete" parameterClass="int">
        DELETE FROM User
        WHERE  id = #id#
    </delete>


    <select id="useResultMap" resultMap="result">
        SELECT * FROM User
        WHERE id=#id#
    </select>

</sqlMap>